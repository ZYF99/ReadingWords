<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_word_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_10"
    android:layout_marginLeft="@dimen/len_10"
    android:layout_marginRight="@dimen/len_10"
    android:foreground="@drawable/ic_touch_menu"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/len_10"
        android:paddingTop="@dimen/len_10"
        android:paddingRight="@dimen/len_10"
        android:paddingBottom="@dimen/len_10"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/cell_main_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textColor="@color/cell_text_eng"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cell_main_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="你好"
            android:textColor="@color/cell_text_chinese"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/checkbox_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sel_nor"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>